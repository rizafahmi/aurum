# Required environment variables for production
# Copy this to .env and fill in values

# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=

# Your domain or EC2 public IP (without http://)
PHX_HOST=your-domain.com

# Set to "true" when using HTTPS (Caddy with domain)
# Leave as "false" for IP-only access
USE_SSL=false

# Optional: Override default port (4000)
# PORT=4000

# Optional: Override default pool size (5)
# POOL_SIZE=5

# Gold API key for price fetching
GOLDAPI_KEY=
